<mjml>
  <mj-head>
    <mj-font name="Open Sans" href="https://fonts.googleapis.com/css?family=Open+Sans" />
  </mj-head>
  <mj-body>
    <mj-container>
      <mj-section>
        <mj-column>
          <mj-text font-family="Open Sans, helvetica" font-size="30" color="#505050" align="center">Daily Downbeat</mj-text>
        </mj-column>
      </mj-section>
      <mj-section background-color="#0275d8">
        <mj-column>
          <mj-text font-size="20px" color="#FFF" font-family="Open Sans, helvetica" align="center">Welcome!</mj-text>
        </mj-column>
      </mj-section>
      <mj-section background-color="#F0F0F0">
        <mj-column>
          <mj-text font-size="16px" color="#505050" font-family="Open Sans, helvetica">You have successfully created an account with Daily Downbeat! Before using your account, you will need to confirm your account with us. You should receive an email about that soon.</mj-text>
          <mj-text font-size="16px" color="#505050" font-family="Open Sans, helvetica">In the meantime, feel free to log in here:</mj-text>
          <mj-button href="<%= @url %>" background-color="#0275d8">
            Login
          </mj-button>
          <mj-divider border-color="#505050"></mj-divider>
          <mj-text font-size="12px" color="#505050" font-family="Open Sans, helvetica">If you did not initiate the creation of a Daily Downbeat account for <%= @user.email %>, please <a href="http://www.dailydownbeat.com/#/contact" target="_blank">contact us</a> as soon as possible.</mj-text>
        </mj-column>
      </mj-section>
    </mj-container>
  </mj-body>
</mjml>
